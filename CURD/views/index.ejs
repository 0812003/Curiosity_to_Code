<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MongoDB CRUD</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>Item List</h1>

    <form action="/add" method="POST">
      <input type="text" name="name" placeholder="Add item" required>
      <button type="submit">Add</button>
    </form>

    <ul>
      <% items.forEach(item => { %>
        <li>
          <%= item.name %>
          <a href="/edit/<%= item._id %>">Edit</a>
          <form action="/delete/<%= item._id %>" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
